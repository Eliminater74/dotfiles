
super + q
    dmenu_run
super + w
    $BROWSER
super + e
    $TERMINAL
super + a
    $TERMINAL -e fff
super + Return
    emacsclient -c
super + b
    blueman-manager
super + o
    xdg-open "$(dbrowse)"
super + p
    opass -p -y
ctrl + super + space
    slock

{XF86MonBrightnessDown,XF86MonBrightnessUp}
    xbacklight {-dec,-inc} 5; status -r
{XF86AudioLowerVolume,XF86AudioRaiseVolume}
    pulsemixer --unmute --change-volume {-,+}5; status -r
XF86AudioMute
    pulsemixer --toggle-mute; status -r

{XF86AudioPrev,XF86AudioNext,XF86AudioPlay}
    mpc {prev,next,toggle}

super + shift + Delete
    prompt "Shutdown?" "shutdown now"
